
animate(name, duration=500ms, fillmode=forwards)
  -webkit-animation-name name
  -webkit-animation-duration duration
  -webkit-animation-fill-mode fillmode

animation-name(names...)
  -webkit-animation-name names
  -moz-animation-name names

animation-direction(dir)
  -webkit-animation-direction dir
  -moz-animation-direction dir

animation-duration(dur)
  -webkit-animation-duration dur
  -moz-animation-duration dur

animation-fill-mode(mode)
  -webkit-animation-fill-mode mode
  -moz-animation-fill-mode mode

animation-iteration-count(count)
  -webkit-animation-iteration-count count
  -moz-animation-iteration-count count

animation-timing-function(fun)
  -webkit-animation-timing-function fun
  -moz-animation-timing-function fun

