@import 'box'
@import 'gradient'
@import 'pos'

.TabBar
  border-top 1px solid #484848
  margin 0
  padding 0
  list-style-type none
  box horizontal
  gradient #333 #111
  height 43px

  > li
    box-flex 1
    color #888
    font-size 10px
    font-weight bold
    height 100%
    position relative
    text-align center

    > div
      abspos 28px 0px 0px 0px

      &:before
        content ""
        abspos -22px 40% false 40%
        height 20px
        background-color #444
        border-radius 3px

    &:before
      content ""
      abspos 6px 0px 6px -1px
      border-left 1px solid #0A0A0A

    &.active
      color #FFF

      > div:before
        background-color #888

      &:after
        content ""
        abspos 30% 0% -70% 0%
        //TODO: For Android 2.3 Compat, figure out older equivalent background -webkit-gradient(radial, center center, 0, center center, 50, from(white),to(black))
        background -webkit-radial-gradient(center, ellipse cover, rgba(#FFF,.50) 0%,rgba(0,0,0,0) 90%)

    &:last-child
      border-right none