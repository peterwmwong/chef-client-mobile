@import 'box'
@import 'border'
@import 'gradient'
@import 'pos'
@import 'triangle'

.PageTitleBar
  buttonColor1 = #666
  buttonColor2 = #333
  buttonBorderColor = #222
  buttonRadius = 3px

  > .backbutton
    border 1px solid buttonBorderColor
    border-radius 0 buttonRadius buttonRadius 0
    color rgba(0,0,0,0)
    font-size 12px
    font-weight bold
    gradient buttonColor1 buttonColor2
    height 27px
    line-height 28px
    min-width 40px
    max-width 60px
    text-align center
    abspos 6px false 20px 18px
    -webkit-transform translateZ(0)

    > .actual
      abspos 0px 7px
      color #CCC
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      text-shadow 0px -1px 0px #111
      -webkit-transform translateZ(0)

    &:before
      content " "
      width 19px
      height 19.3px
      pointer-events none
      border-left 1px solid buttonBorderColor
      border-bottom 1px solid buttonBorderColor
      left -11px
      top 3px
      position absolute
      -webkit-transform rotate(45deg) translateZ(0)
      background -webkit-gradient(linear, left top, right bottom, color-stop(0%,buttonColor1), color-stop(100%,buttonColor2))

  > .title
    abspos -2px 60px false 60px
    color #FFF
    font-size 22px
    font-weight bold
    padding 9px 0 0 0
    text-align center
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    text-shadow 0px -1px 0px #000
    height 35px
    -webkit-transform translateZ(0)