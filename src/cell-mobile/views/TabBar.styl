@import 'box'
@import 'gradient'
@import 'pos'

.TabBar
  border-top 1px solid #666
  margin 0
  padding 0
  list-style-type none
  box horizontal
  gradient #444 #222
  height 43px

  > li.tab
    box-flex 1
    color #888
    font-size 10px
    font-weight bold
    height 100%
    position relative
    text-align center
    text-shadow 0px -1px 0px #333

    > .tab-label
      abspos 28px 0px 0px 0px

      &:after
        content ""
        abspos -22px 40% false 40%
        height 20px
        background-color #444
        border-radius 3px

    &:after
      content ""
      abspos 12px 0px 12px -1px
      border-left 1px solid #1D1D1D

    &.active
      color #FFF

      > .tab-label:after
        background-color #888

      &:before
        content ""
        abspos 30% 0% -40% 0%
        //TODO: For Android 2.3 Compat, figure out older equivalent background -webkit-gradient(radial, center center, 0, center center, 50, from(white),to(black))
        background -webkit-radial-gradient(center, ellipse cover, rgba(#FFF,.40) 0%,rgba(0,0,0,0) 90%)

    &:last-child
      border-right none